pipeline {
    agent any
    environment {
        NODE_VERSION = '22'
        PROJECT_DIR = '8. Fundamentos de integracion continua/3. ImplementaciÃ³n de un pipeline de integracion continua'
    }
    tools {
        nodejs NODE_VERSION
    }
    stages {
        stage('Build') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh "cd '${PROJECT_DIR}' && npm install"
            }
        }
        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh "cd '${PROJECT_DIR}' && npm test"
            }
        }
        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying application...'
                sh "cd '${PROJECT_DIR}' && npm start > app.log 2>&1 &"
            }
        }
    }
    post {
        success {
            echo 'âœ… Pipeline completed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
